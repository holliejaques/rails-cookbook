<div class="banner" style="background-image: url('<%= image_path "banner.jpg" %>'), linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3))">
  <h1>Cookbook</h1>
  <h2>Save your favourite recipes</h2>
</div>

<div class="container">

  <div class="d-flex align-items-center justify-content-between m-3">
    <h1 class="mt-3">List of Categories</h1>
    <%= link_to "New Category", new_category_path, class: "btn btn-primary text-white" %>
  </div>

  <div class="cards">
    <% @categories.each do |category| %>
    <% if category.photo.attached?  %>
        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path category.photo.key, width: 400, height: 300, crop: :fill %>')">
    <% end %>
          <h1><%= link_to category.name, category_path(category), class:"text-decoration-none text-white" %></h1>
          <h2><%= category.recipes.count %> recipe </h2>
        </div>
    <% end %>
  </div>

</div>
