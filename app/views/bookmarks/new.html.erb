<div class="container py-5">
  <div class="row">
    <div class="col-12 col-md-6 offset-lg-3">
      <div class="bg-white p-3 shadow">
        <h1>Add a recipe to your category</h1>
        <%= simple_form_for [@category, @bookmark] do |f| %>
          <%= f.association :recipe, prompt: "Select a recipe"%>
          <%= f.input :comment, placeholder: "Enter a comment about the recipe" %>
          <%= f.submit class: "btn btn-info"%>
        <% end %>
      </div>
    </div>
  </div>
</div>
